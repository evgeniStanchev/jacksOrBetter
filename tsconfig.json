{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"], 
    "sourceMap": true,
    "declaration": false,
    "outFile": "./bin/Game.min.js",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "noImplicitReturns": false,
    "allowUnreachableCode": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts"
  ]
}